{
  "schemaVersion": 1,
  "id": "lcc-base",
  "version": "${version}",

  "name": "Loosely Connected Concepts - Base",
  "description": "This module contains the foundation that powers Loosely Connected Concepts.",
  "authors": [
    "joshmanisdabomb"
  ],
  "contact": {
    "homepage": "https://joshmanisdabomb.com/",
    "sources": "https://bitbucket.org/joshmanisdabomb/loosely-connected-concepts/src/fabric/"
  },

  "license": "All rights reserved, see LICENSE.md",
  "icon": "assets/lcc-base/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      {
        "adapter": "kotlin",
        "value": "com.joshmanisdabomb.lcc.LCCBase"
      }
    ],
    "client": [
      {
        "adapter": "kotlin",
        "value": "com.joshmanisdabomb.lcc.LCCBaseClient"
      }
    ]
  },
  "mixins": [
    "lcc-base.mixins.json",
    {
      "config": "lcc-base.client-mixins.json",
      "environment": "client"
    }
  ],
  "depends": {
    "fabricloader": ">=0.11.1",
    "fabric": "*",
    "fabric-language-kotlin": ">=1.4.21",
    "minecraft": "1.17.x"
  },
  "suggests": {
    "lcc-mod": "*"
  },
  "custom": {
    "modmenu:api": true,
    "modmenu:parent": "lcc-mod"
  },
  "accessWidener": "lcc-base.accesswidener"
}